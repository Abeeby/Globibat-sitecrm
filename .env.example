# Configuration Globibat CRM - Exemple
# Copier ce fichier vers .env et remplir avec vos vraies valeurs
# NE JAMAIS COMMITER LE FICHIER .env SUR GIT

# Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=False

# Sécurité (générer des clés aléatoires pour la production)
SECRET_KEY=your-secret-key-change-in-production
SECURITY_PASSWORD_SALT=your-salt-change-in-production

# Base de données
DATABASE_URL=sqlite:///instance/globibat.db

# Email (configuration SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@globibat.com

# RH et notifications
HR_EMAIL=rh@globibat.com
ENABLE_EMAIL_NOTIFICATIONS=False

# 2FA (authentification à deux facteurs)
ENABLE_2FA=False

# Sessions
SESSION_COOKIE_SECURE=False  # Mettre True en production avec HTTPS

# Logs
LOG_TO_STDOUT=False
LOG_LEVEL=INFO